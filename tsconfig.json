{
  "compilerOptions": {
    "target": "ES2019",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@components*": ["src/components*"],
      "@hooks*": ["src/hooks*"],
      "@utils*": ["src/utils*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "server/index.js"],
  "exclude": ["node_modules"]
}
